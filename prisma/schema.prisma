// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Newsletter {
  id                  Int                  @id @default(autoincrement())
  email               String               @unique
  status              String               @default("active") // "active" or "unsubscribed"
  created_at          DateTime             @default(now())
  updated_at          DateTime             @updatedAt
  unsubscribeRequests UnsubscribeRequest[]

  @@map("newsletters")
}

model UnsubscribeRequest {
  id            Int        @id @default(autoincrement())
  newsletter    Newsletter @relation(fields: [newsletterId], references: [id])
  newsletterId  Int
  status        String     @default("pending") // "pending", "approved", "rejected"
  reason        String?    // Optional reason for unsubscribing
  adminComment  String?    // Optional admin comment
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
  processed_at  DateTime?  // When the admin processed the request

  @@map("unsubscribe_requests")
} 